<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "no.teknix.quicklist"
        versionCode = "10"
        version     = "1.3.1" >

    <!-- versionCode is optional and Android only -->

    <name>QuickList</name>

    <description>
        Quick and easy todo list manager 
    </description>

    <author href="https://teknix.no" email="kek@teknix.no">
        Teknix
    </author>

    <!-- Default application icon -->
	<icon src="www/icon.png" />
	<!--
	    Default icon should work, but cordova don't overwrite
	    the default on all densities
	-->
	<icon src="www/icon.png" platform="android" density="ldpi" />
	<icon src="www/icon.png" platform="android" density="mdpi" />
	<icon src="www/icon.png" platform="android" density="hdpi" />
	<icon src="www/icon.png" platform="android" density="xhdpi" />

    <!--
      If you do not want any permissions to be added to your app, add the
      following tag to your config.xml; you will still have the INTERNET
      permission on your app, which PhoneGap requires.
    -->
    <preference name="permissions" value="none"/>

